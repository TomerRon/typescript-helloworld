  "scripts": {
    "test": "jest"
  },
  "dependencies": {
    "typescript": "3.7.3"
  },
  "devDependencies": {
    "@types/jest": "24.0.24",
    "jest": "24.9.0",
    "prettier": "1.19.1",
    "ts-jest": "24.2.0"
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "testMatch": [
      "**/__tests__/**/*.+(ts|tsx|js)",
      "**/?(*.)+(spec|test).+(ts|tsx|js)"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    }
  }
}
